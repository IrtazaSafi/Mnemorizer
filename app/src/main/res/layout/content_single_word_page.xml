<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.irtazasafi.mnemorizer.single_word_page"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:id="@+id/e"
    android:weightSum="1"
    android:background="#fdfdfd">

    <android.support.v7.widget.AppCompatButton
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="270dp
        "
        android:id="@+id/wordDisplay"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Word"
        android:textSize="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#050505"
        android:background="#fdfdfd"
        android:layout_weight="0.02" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Tap To View Meaning"
        android:id="@+id/viewMeaning"
        android:background="#f2ebeb"
        android:onClick="tapToSeeMeaning"
        android:layout_weight="0.40" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Words Learning "
        android:id="@+id/wordsLearning"
        android:layout_marginTop="20dp"
        android:textColor="#fcf9f9"
        android:background="#eb0f0f"
        android:textSize="25dp" />

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="25dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:background="#fdfdfd"
        android:progress="50"
        android:max="100"
        android:progressTint="#fb0404" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Words Learnt"
        android:id="@+id/button"
        android:textColor="#fcf9f9"
        android:background="#23d916"
        android:textSize="25dp"
        android:layout_below="@+id/wordsLearning"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/wordsLearning"
        android:layout_alignEnd="@+id/wordsLearning" />
    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="25dp"
        style="?android:attr/progressBarStyleHorizontal"
        android:background="#fdfdfd"
        android:progress="50"
        android:max="100"
        android:progressTint="#08fb04" />


</LinearLayout>
