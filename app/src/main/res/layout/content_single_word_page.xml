<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.irtazasafi.mnemorizer.single_word_page"
    xmlns:ProgressWheel="http://schemas.android.com/apk/res-auto"
    android:id="@+id/e">

    <android.support.v7.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="270dp
        "
        android:id="@+id/view"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="Word"
        android:textSize="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#050505"
        android:background="#e7e4e4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap To View Meaning"
        android:id="@+id/viewMeaning"
        android:layout_alignBottom="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view"
        android:background="#fcfafa"
        android:onClick="tapToSeeMeaning" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Words Learning "
        android:id="@+id/wordsLearning"
        android:layout_below="@+id/view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view"
        android:textColor="#fcf9f9"
        android:background="#eb0f0f"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Words Learnt"
        android:id="@+id/button"
        android:textColor="#fcf9f9"
        android:background="#23d916"
        android:textSize="25dp"
        android:layout_below="@+id/wordsLearning"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="36dp"
        android:layout_alignRight="@+id/wordsLearning"
        android:layout_alignEnd="@+id/wordsLearning" />


</RelativeLayout>
